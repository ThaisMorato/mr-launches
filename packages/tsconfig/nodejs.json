{
  "compilerOptions": {
    "types": [
      "jest",
      "node"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "outDir": "build",
    "rootDir": "./src",
    "paths": {
      "@shared/*": [
        "./src/shared/*"
      ],
      "@infrastructure/*": [
        "./src/infrastructure/*"
      ],
      "@domain/*": [
        "./src/domain/*"
      ],
      "@application/*": [
        "./src/application/*"
      ]
    },
    "sourceMap": true,
    "plugins": [
      {
        "transform": "ts-auto-mock/transformer",
        "cacheBetweenTests": false
      }
    ]
  },
  "exclude": [
    "node_modules"
  ]
}